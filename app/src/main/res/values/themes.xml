<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.PCGenerator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myViolet</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="HistorialFilterActivated" parent="">
        <item name="android:background">@drawable/filteritem_border</item>
    </style>

    <style name="HistorialFilterDeactivated" parent="">
        <item name="android:background">@drawable/filteritemdeactivated_border</item>
    </style>

    <style name="ButtonFilter" parent="">
        <item name="android:backgroundTint">#213519</item>
        <item name="android:textColor">#68CF3B</item>
        <item name="strokeColor">#71D941</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>