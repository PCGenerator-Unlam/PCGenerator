<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusquedaComponentesFragment"
    android:orientation="vertical"
    android:background="@color/black">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Componentes"
        android:textColor="@color/white"
        android:fontFamily="@font/arimo"
        android:textSize="25sp"
        android:gravity="center"
       android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@drawable/line_shape"

        tools:layout_editor_absoluteY="1dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".BusquedaComponentesFragment"
        android:orientation="horizontal"
        >
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta buscando:"
        android:textColor="@color/white"
        android:fontFamily="@font/arimo"
        android:textSize="20sp"

        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_componente_buscado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarjeta de video"
            android:textColor="@color/secondary"
            android:fontFamily="@font/arimo"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            />

        </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el producto deseado"
        android:textColor="@color/text_gray"
        android:fontFamily="@font/arimo"
        android:textSize="18sp"
       android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_busqueda_componentes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"/>





</LinearLayout>
</layout>