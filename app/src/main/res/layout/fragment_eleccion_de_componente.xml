<?xml version="1.0" encoding="utf-8"?>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black"
      android:orientation="vertical"
      tools:context=".ui.fragments.FragmentEleccionDeComponentes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <AutoCompleteTextView
        android:id="@+id/ac_tipo_computadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_pc_armada"
        android:drawableEnd="@drawable/lista_desplegable"
        android:fontFamily="@font/arimo"
        android:gravity="center"
        android:padding="8dp"
        android:text="Tipo de computadora"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@drawable/line_shape" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

      <LinearLayout
          android:id="@+id/busquedaComponentesRam"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/background_pc_armada"
          android:gravity="center"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="start|center_horizontal"
            android:text="0/2"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:gravity="start" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_ram_componentes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/circulo_x"
            android:fontFamily="@font/arimo"
            android:gravity="center|start"
            android:padding="8dp"


            android:text="RAM"
            android:textColor="@color/white"
            android:textSize="30sp" />
      </LinearLayout>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/bt_procesador_componentes"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/background_pc_armada"
          android:drawableEnd="@drawable/circulo_x"
          android:fontFamily="@font/arimo"
          android:padding="8dp"
          android:text="PROCESADOR"
          android:textColor="@color/white"
          android:textSize="30sp"


          />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/bt_ssd_componentes"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/background_pc_armada"
          android:drawableEnd="@drawable/circulo_x"
          android:fontFamily="@font/arimo"
          android:padding="8dp"
          android:text="SSD"
          android:textColor="@color/white"
          android:textSize="30sp" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/bt_tgrafica_componentes"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/background_pc_armada"
          android:drawableEnd="@drawable/circulo_x"
          android:fontFamily="@font/arimo"
          android:padding="8dp"
          android:text="T.GRAFICA"
          android:textColor="@color/white"
          android:textSize="30sp"


          />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/bt_mother_componentes"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/background_pc_armada"
          android:drawableEnd="@drawable/circulo_x"
          android:fontFamily="@font/arimo"
          android:padding="8dp"
          android:text="MOTHER"
          android:textColor="@color/white"
          android:textSize="30sp"

          />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/bt_verpc_componentes"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"
          android:backgroundTint="@color/myViolet"
          android:fontFamily="@font/arimo"
          android:text="VER PC"
          android:textColor="@color/white">

      </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="10dp"
        android:text="0/2"
        android:textColor="@color/white" />

  </LinearLayout>