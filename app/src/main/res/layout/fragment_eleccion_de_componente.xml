<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_eleccion_de_componente"
    android:background="@color/black">
<AutoCompleteTextView
    android:id="@+id/ac_tipo_computadora"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="tipo de computadora"
    android:textSize="20sp"
    android:textColor="@color/white"
   android:gravity="center"
    android:background="@drawable/background_pc_armada"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:drawableEnd="@drawable/lista_desplegable"
    android:padding="8dp"
    android:fontFamily="@font/arimo"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="10dp"

      android:background="@drawable/line_shape" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/bt_ram_componentes"
      android:layout_width="match_parent"
      android:layout_height="58dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="50dp"
      android:layout_marginEnd="20dp"
      android:background="@drawable/background_pc_armada"
      android:fontFamily="@font/arimo"
      android:text="RAM"
      android:textColor="@color/white"
      android:textSize="30sp"
      android:drawableEnd="@drawable/circulo_x"
      android:padding="8dp"


      />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/2"
        android:textColor="@color/white"
        android:layout_marginStart="350dp"
        android:layout_marginTop="10dp"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/bt_procesador_componentes"
      android:layout_width="match_parent"
      android:layout_height="58dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:background="@drawable/background_pc_armada"
      android:fontFamily="@font/arimo"
      android:text="PROCESADOR"
      android:textColor="@color/white"
      android:textSize="30sp"
      android:layout_marginTop="20dp"
      android:drawableEnd="@drawable/circulo_x"
      android:padding="8dp"


      />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/bt_ssd_componentes"
      android:layout_width="match_parent"
      android:layout_height="58dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="20dp"
      android:background="@drawable/background_pc_armada"
      android:fontFamily="@font/arimo"
      android:text="SSD"
      android:textColor="@color/white"
      android:textSize="30sp"
      android:drawableEnd="@drawable/circulo_x"
    android:padding="8dp"
      />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_tgrafica_componentes"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_pc_armada"
        android:text="T.GRAFICA"
        android:textSize="30sp"
        android:fontFamily="@font/arimo"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/circulo_x"
        android:padding="8dp"



        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_mother_componentes"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="MOTHER"
        android:textSize="30sp"
        android:fontFamily="@font/arimo"
        android:textColor="@color/white"
        android:background="@drawable/background_pc_armada"
        android:drawableEnd="@drawable/circulo_x"
        android:padding="8dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_verpc_componentes"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="VER PC"
        android:layout_gravity="center"
        android:backgroundTint="#5C2E99"
        android:fontFamily="@font/arimo"
        android:layout_marginTop="60dp"
android:textColor="@color/white"
        >

    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout></layout>