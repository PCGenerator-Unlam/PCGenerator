<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/arimo"
            android:gravity="center"
            android:text="Graficos"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/secondary" />

            <TextView
                android:id="@+id/nombrePC1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/arimo"
                android:text="- PC Programador"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/purple_200" />

            <TextView
                android:id="@+id/nombrePC2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/arimo"
                android:text="- PC Programador 2"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#542CB1" />

            <TextView
                android:id="@+id/nombrePC3"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/arimo"
                android:text="- PC Programador 3"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#EDB85B" />

            <TextView
                android:id="@+id/nombrePC4"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/arimo"
                android:text="- PC Programador 4"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />
        </LinearLayout>

        <com.echo.holographlibrary.BarGraph
            android:id="@+id/graficosComponentes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="30dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>