<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".ui.fragments.NuevaComputadoraFragment">

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="25dp"
        android:text="@string/description_new_computer"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/ly_gaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/historyitem_border"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_new_gaming"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:src="@drawable/mando" />

        <TextView
            android:id="@+id/tv_new_gaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="0"
            android:fontFamily="@font/arimo"
            android:text="@string/gaming"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="80dp"
            android:layout_weight="0"
            android:src="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/historyitem_border"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_new_design"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:src="@drawable/photoshop" />

        <TextView
            android:id="@+id/tv_new_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_weight="0"
            android:fontFamily="@font/arimo"
            android:text="@string/design"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_info2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="85dp"
            android:layout_weight="0"
            android:src="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_office"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/historyitem_border"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_new_office"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:src="@drawable/simbolo_oficina" />

        <TextView
            android:id="@+id/tv_new_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_weight="0"
            android:fontFamily="@font/arimo"
            android:text="@string/office"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_info3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="80dp"
            android:layout_weight="0"
            android:src="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/historyitem_border"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_new_custom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:src="@drawable/lupa" />

        <TextView
            android:id="@+id/tv_new_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_weight="0"
            android:fontFamily="@font/arimo"
            android:text="@string/custom"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_info4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="100dp"
            android:layout_weight="0"
            android:src="@drawable/image" />
    </LinearLayout>

</LinearLayout>